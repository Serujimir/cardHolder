<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Card Number"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />

    <EditText
        android:id="@+id/edCardCVVcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="CVV/CVV2 Code"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/edCardNumber"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/edCardNumber"
        app:layout_constraintTop_toBottomOf="@+id/edCardNumber" />

    <EditText
        android:id="@+id/edCardExpirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="ExpirtionDate"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/edCardCVVcode"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edCardCVVcode"
        app:layout_constraintTop_toBottomOf="@+id/edCardCVVcode" />

    <Button
        android:id="@+id/btnPOST"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="POST"
        android:text="ADD"
        app:layout_constraintEnd_toEndOf="@+id/edCardNumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edCardNumber"
        app:layout_constraintTop_toBottomOf="@+id/edCardExpirationDate" />

    <Button
        android:id="@+id/btnGET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="READ"
        app:layout_constraintEnd_toEndOf="@+id/btnPOST"
        app:layout_constraintStart_toStartOf="@+id/btnPOST"
        app:layout_constraintTop_toBottomOf="@+id/btnPOST" />

</androidx.constraintlayout.widget.ConstraintLayout>